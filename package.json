{
  "name": "xssnake",
  "description": "Online multiplayer Snake where the winner of a game is allowed to execute JavaScript in the browser of other players.",
  "keywords": [
    "xssnake",
    "snake",
    "multiplayer",
    "game"
  ],
  "homepage": "https://github.com/blaise-io/xssnake",
  "author": "Blaise Kal <blaise.kal@gmail.com>",
  "license": "MIT",
  "version": "0.0.1-alpha",
  "repository": {
    "type": "git",
    "url": "https://github.com/blaise-io/xssnake.git"
  },
  "dependencies": {
    "html-webpack-plugin": "5.3.1",
    "nano-server": "^0.5.4",
    "pngjs": "6.0.0",
    "ts-loader": "8.1.0",
    "typescript": "^4.2.4",
    "webpack": "5.33.2",
    "webpack-cli": "4.6.0",
    "ws": "7.4.4"
  },
  "devDependencies": {
    "@types/node": "14.14.37",
    "@types/pngjs": "^6.0.0",
    "@types/webpack": "5.28.0",
    "@types/ws": "7.4.1",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "css-loader": "^5.2.2",
    "eslint": "7.23.0",
    "eslint-plugin-unused-imports": "1.1.1",
    "mini-css-extract-plugin": "^1.5.0",
    "prettier": "2.2.1",
    "style-loader": "^2.0.0",
    "supervisor": "0.12.0"
  },
  "engines": {
    "node": ">= 0.6"
  },
  "scripts": {
    "client": "webpack --mode development --watch --config src/client/webpack.config.js",
    "client.production": "webpack --mode production --config src/client/webpack.config.js",
    "server": "webpack --mode development --watch --config src/server/webpack.config.js",
    "server.production": "webpack --mode production --config src/server/webpack.config.js",
    "browser": "(nano-server 8002 dist &); open http://127.0.0.1:8002",
    "lint": "eslint . --fix --ext .ts; prettier --write '**/*.ts'",
    "start": "node dist/server.js --enable-source-maps --throw-deprecation",
    "restart": "supervisor --watch dist/server.js -- dist/server.js --enable-source-maps --throw-deprecation"
  }
}
